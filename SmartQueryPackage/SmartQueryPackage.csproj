<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- NuGet paket bilgileri -->
		<PackageId>SmartQuery</PackageId>
		<Version>1.0.0</Version>
		<Authors>Serkan Çamkerten</Authors>
		<Description>It manages paging, sorting and filtering with just a simple query format.</Description>
		<!-- Diğer isteğe bağlı özellikler -->
		<PackageLicenseFile>LICENSE.md</PackageLicenseFile>
		<PackageReadmeFile>README.md</PackageReadmeFile>

	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.11" />
		<PackageReference Include="System.Linq.Dynamic.Core" Version="1.3.4" />
		<None Include="LICENSE.md" Pack="true" PackagePath=""/>
		<None Include="README.md" Pack="true" PackagePath=""/>
	</ItemGroup>

</Project>
